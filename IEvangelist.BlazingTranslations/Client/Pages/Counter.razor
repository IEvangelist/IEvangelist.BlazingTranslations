@page "/counter"
@inject IStringLocalizer<Counter> Localizer

<h1>@Localizer["CounterTitle"]</h1>

<p>@Localizer["CounterCount"] @_currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">@Localizer["ClickMe"]</button>

@code {
    private int _currentCount = 0;

    private void IncrementCount() => ++ _currentCount;
}
